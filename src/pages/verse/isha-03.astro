---
import BaseLayout from '../../layouts/BaseLayout.astro';
import VerseDisplay from '../../components/VerseDisplay.astro';
import Navigation from '../../components/Navigation.astro';

// Import the verse data
import verseDataRaw from '../../../content/upanishads/isha/verses/03.json' with { type: 'json' };
const verseData = verseDataRaw as any;

---

<BaseLayout title={verseData.reference}>
  <div class="flex min-h-screen">
    <Navigation currentPath={Astro.url.pathname} />
    
    <main class="flex-1">
      <VerseDisplay 
        verse={verseData}
        prevVerseId="isha-02"
        nextVerseId="isha-04"
      />
    </main>
  </div>
</BaseLayout>
