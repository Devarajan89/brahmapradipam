---
interface BhashyaContent {
  sanskrit: string;
  notes?: string;
}

interface Props {
  content: BhashyaContent;
}

const { content } = Astro.props;
---

<section class="bg-[var(--color-bg-bhashya)] border-2 border-[var(--color-accent-sandalwood)] rounded-lg p-6 md:p-8">
  <h3 class="text-2xl font-semibold text-[var(--color-accent-sandalwood)] mb-6 text-center">
    <span class="sanskrit-small">श्री शङ्कर भगवद्पाद भाष्य</span>
  </h3>
  
  <div class="space-y-6">
    <!-- Original Sanskrit Commentary -->
    <div>
      <div class="sanskrit-small leading-loose text-[var(--color-text-primary)] bg-white/50 p-4 rounded">
        {content.sanskrit}
      </div>
    </div>

    {content.notes && (
      <div>
        <h4 class="text-sm font-semibold text-[var(--color-text-secondary)] mb-3 uppercase tracking-wide">
          Notes
        </h4>
        <div class="text-[var(--color-text-secondary)] leading-relaxed italic bg-white/50 p-4 rounded">
          {content.notes}
        </div>
      </div>
    )}
  </div>
</section>

<style>
  details[open] summary::after {
    content: ' ⊖';
  }
</style>
