---
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
}

const { title, description = "A sacred digital library for serious spiritual seekers of Advaita Vedānta" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content={description}>
  <title>{title} | Brahmapradipam</title>
  <link rel="icon" type="image/svg+xml" href="/favicon.svg">
</head>
<body class="min-h-screen flex flex-col">
  <!-- Header -->
  <header class="sticky top-0 z-40 border-b border-border bg-bg-white/95 backdrop-blur-sm shadow-sm">
    <div class="max-w-7xl mx-auto px-4 py-3 md:py-4">
      <div class="flex items-center justify-between">
        <!-- Logo -->
        <a href="/" class="flex items-center gap-3 hover:opacity-80 transition-opacity">
          <img src="/images/logo.png" alt="Brahmapradipam" class="h-10 md:h-12" />
        </a>
        
        <!-- Desktop Navigation -->
        <nav class="hidden md:flex items-center gap-6">
          <a href="/library" class="text-text-primary hover:text-accent-saffron transition-colors font-medium">
            Library
          </a>
          <div class="relative group">
            <button class="text-text-primary hover:text-accent-saffron transition-colors flex items-center gap-1 font-medium">
              Concepts
              <span class="text-xs">▼</span>
            </button>
            <div class="absolute top-full right-0 mt-2 w-52 bg-bg-white border border-border rounded-lg shadow-xl opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 pointer-events-none group-hover:pointer-events-auto z-50">
              <a href="/concepts/glossary" class="block px-4 py-3 text-text-primary hover:bg-bg-sanskrit hover:text-accent-saffron transition-colors rounded-t-lg border-b border-border">
                <div class="font-medium">Glossary</div>
                <div class="text-xs text-text-muted">Advaita terms</div>
              </a>
              <a href="/concepts/key-concepts" class="block px-4 py-3 text-text-primary hover:bg-bg-sanskrit hover:text-accent-saffron transition-colors border-b border-border">
                <div class="font-medium">Key Concepts</div>
                <div class="text-xs text-text-muted">Core teachings</div>
              </a>
              <a href="/concepts/mahavakyas" class="block px-4 py-3 text-text-primary hover:bg-bg-sanskrit hover:text-accent-saffron transition-colors rounded-b-lg">
                <div class="font-medium">Mahāvākyas</div>
                <div class="text-xs text-text-muted">Great statements</div>
              </a>
            </div>
          </div>
          <a href="/guidance" class="text-text-primary hover:text-accent-saffron transition-colors font-medium">
            Guidance
          </a>
          <a href="/about" class="text-text-primary hover:text-accent-saffron transition-colors font-medium">
            About
          </a>
          <a href="/library" class="bg-accent-saffron text-white px-4 py-2 rounded-lg font-medium hover:opacity-90 transition-opacity">
            Browse Texts
          </a>
        </nav>

        <!-- Mobile Menu Button -->
        <button id="mobile-menu-btn" class="md:hidden p-2 text-text-primary hover:text-accent-saffron" aria-label="Toggle menu">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile Menu -->
    <div id="mobile-menu" class="hidden md:hidden border-t border-border bg-bg-white">
      <nav class="px-4 py-4 space-y-2">
        <a href="/library" class="block px-4 py-3 text-text-primary hover:bg-bg-sanskrit hover:text-accent-saffron rounded-lg transition-colors font-medium">
          Library
        </a>
        <div class="px-4 py-2 text-text-muted text-sm font-semibold">Concepts</div>
        <a href="/concepts/glossary" class="block px-4 py-2 pl-8 text-text-primary hover:bg-bg-sanskrit hover:text-accent-saffron rounded-lg transition-colors">
          Glossary
        </a>
        <a href="/concepts/key-concepts" class="block px-4 py-2 pl-8 text-text-primary hover:bg-bg-sanskrit hover:text-accent-saffron rounded-lg transition-colors">
          Key Concepts
        </a>
        <a href="/concepts/mahavakyas" class="block px-4 py-2 pl-8 text-text-primary hover:bg-bg-sanskrit hover:text-accent-saffron rounded-lg transition-colors">
          Mahāvākyas
        </a>
        <a href="/guidance" class="block px-4 py-3 text-text-primary hover:bg-bg-sanskrit hover:text-accent-saffron rounded-lg transition-colors font-medium">
          Guidance
        </a>
        <a href="/about" class="block px-4 py-3 text-text-primary hover:bg-bg-sanskrit hover:text-accent-saffron rounded-lg transition-colors font-medium">
          About
        </a>
      </nav>
    </div>
  </header>

  <script>
    // Mobile menu toggle
    const mobileMenuBtn = document.getElementById('mobile-menu-btn');
    const mobileMenu = document.getElementById('mobile-menu');
    
    mobileMenuBtn?.addEventListener('click', () => {
      mobileMenu?.classList.toggle('hidden');
    });
  </script>

  <!-- Main Content -->
  <main class="flex-1">
    <slot />
  </main>
  
  <!-- Enhanced Footer -->
  <footer class="bg-gradient-to-b from-bg-white to-amber-50 border-t border-amber-200 mt-auto">
    <!-- Main Footer Content -->
    <div class="max-w-7xl mx-auto px-4 py-12">
      <div class="grid md:grid-cols-4 gap-8 mb-8">
        <!-- About Section -->
        <div class="md:col-span-2">
          <div class="mb-4">
            <img src="/images/logo.png" alt="Brahmapradipam" class="h-16 mb-3" />
          </div>
          <p class="text-text-secondary text-sm leading-relaxed mb-4">
            A sacred digital library for serious seekers of <span class="sanskrit-small">mokṣa</span> studying Advaita Vedānta under qualified guru guidance.
          </p>
          <p class="sanskrit text-lg text-accent-saffron">
            ब्रह्मप्रदीपम्
          </p>
          <p class="text-text-muted text-xs italic mt-1">
            "A lamp for illuminating Brahman"
          </p>
        </div>

        <!-- Quick Links -->
        <div>
          <h3 class="font-semibold text-text-primary mb-4">Quick Links</h3>
          <ul class="space-y-2 text-sm">
            <li>
              <a href="/library" class="text-text-secondary hover:text-accent-saffron transition-colors">
                Browse Library
              </a>
            </li>
            <li>
              <a href="/library/isha-upanishad" class="text-text-secondary hover:text-accent-saffron transition-colors">
                Īśa Upaniṣad
              </a>
            </li>
            <li>
              <a href="/library/bhagavad-gita" class="text-text-secondary hover:text-accent-saffron transition-colors">
                Bhagavad Gītā
              </a>
            </li>
            <li>
              <a href="/concepts/glossary" class="text-text-secondary hover:text-accent-saffron transition-colors">
                Glossary
              </a>
            </li>
          </ul>
        </div>

        <!-- Resources -->
        <div>
          <h3 class="font-semibold text-text-primary mb-4">Resources</h3>
          <ul class="space-y-2 text-sm">
            <li>
              <a href="/guidance" class="text-text-secondary hover:text-accent-saffron transition-colors">
                For Newcomers
              </a>
            </li>
            <li>
              <a href="/about" class="text-text-secondary hover:text-accent-saffron transition-colors">
                About This Project
              </a>
            </li>
            <li>
              <a href="/concepts/key-concepts" class="text-text-secondary hover:text-accent-saffron transition-colors">
                Key Concepts
              </a>
            </li>
            <li>
              <a href="/concepts/mahavakyas" class="text-text-secondary hover:text-accent-saffron transition-colors">
                Mahāvākyas
              </a>
            </li>
          </ul>
        </div>
      </div>

      <!-- Important Disclaimer -->
      <div class="border-t border-amber-200 pt-8 mb-6">
        <div class="bg-amber-100/50 rounded-lg p-6 max-w-4xl mx-auto">
          <h4 class="font-semibold text-accent-saffron mb-3 text-center">⚠️ Important Notice</h4>
          <p class="text-text-secondary text-sm leading-relaxed text-center mb-3">
            These sacred texts are meant to be studied under the guidance of a qualified guru in the traditional <span class="sanskrit-small">guru-śiṣya paramparā</span>. 
            This platform provides access to scriptures but cannot provide the direct transmission of knowledge that comes only through a realized teacher.
          </p>
          <p class="text-text-muted text-xs text-center italic">
            Self-study without proper guidance may lead to misunderstanding. Please seek a qualified teacher.
          </p>
        </div>
      </div>

      <!-- Bottom Bar -->
      <div class="border-t border-amber-200 pt-6">
        <div class="flex flex-col md:flex-row justify-between items-center gap-4">
          <p class="text-text-muted text-sm">
            © {new Date().getFullYear()} Brahmapradipam. For spiritual seekers under guru guidance.
          </p>
          <div class="flex items-center gap-4">
            <a href="https://github.com/Devarajan89/brahmapradipam" target="_blank" rel="noopener noreferrer" class="text-text-muted hover:text-accent-saffron transition-colors text-sm">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
              </svg>
            </a>
          </div>
        </div>
      </div>

      <!-- Sanskrit Salutation -->
      <div class="text-center mt-6">
        <p class="sanskrit text-xl text-accent-saffron">
          श्री गुरुभ्यो नमः
        </p>
        <p class="text-text-muted text-xs mt-1 italic">
          Salutations to the revered teachers
        </p>
      </div>
    </div>
  </footer>
</body>
</html>
