---
import '../styles/global.css';
import GlobalSearch from '../components/GlobalSearch.astro';

interface Props {
  title: string;
  description?: string;
}

const { title, description = "A sacred digital library for serious spiritual seekers of Advaita VedƒÅnta" } = Astro.props;
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const imageURL = new URL('/images/logo.png', Astro.site);
